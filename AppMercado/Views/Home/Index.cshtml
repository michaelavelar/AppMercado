@model List<AppMercado.Models.Produto>

@{
    ViewData["Title"] = "AppMercado";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    h1.text-center {
        color: orange;
        font-weight: bold;
        font-family: 'Pacifico', cursive;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .subtext {
        text-align: center;
        font-size: 1.1rem;
        color: #555;
        margin-top: 0.5rem;
    }

    .nav-tabs .nav-link {
        color: black;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .nav-tabs .nav-link.active {
        color: orange !important;
        font-weight: 700;
        border-color: orange !important;
    }

    .nav-tabs .nav-link:hover {
        color: orange;
    }
</style>

<div class="container mt-4">
    <h1 class="text-center mb-2">
        AppMercado
        <i class="bi bi-cart3"></i>
    </h1>
    <div class="subtext">
        Tudo que você procura, você encontra aqui.
    </div>

    <ul class="nav nav-tabs mt-4" id="categoriaTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="frutas-tab" data-bs-toggle="tab" data-bs-target="#frutas" type="button" role="tab" aria-controls="frutas" aria-selected="true">
                <i class="bi bi-apple"></i> Frutas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="limpeza-tab" data-bs-toggle="tab" data-bs-target="#limpeza" type="button" role="tab" aria-controls="limpeza" aria-selected="false">
                <i class="bi bi-bucket"></i> Limpeza
            </button>
        </li>
    </ul>
    
    <div class="tab-content mt-3" id="categoriaTabContent">
        <div class="tab-pane fade show active" id="frutas" role="tabpanel" aria-labelledby="frutas-tab">
            @await Html.PartialAsync("_ListaProdutos", Model.Where(p => p.Categoria == "Frutas").ToList())
        </div>
        <div class="tab-pane fade" id="limpeza" role="tabpanel" aria-labelledby="limpeza-tab">
            @await Html.PartialAsync("_ListaProdutos", Model.Where(p => p.Categoria == "Limpeza").ToList())
        </div>
    </div>
</div>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="carrinhoContainer">
        @await Html.PartialAsync("_Carrinho", new AppMercado.Models.CarrinhoViewModel())
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
